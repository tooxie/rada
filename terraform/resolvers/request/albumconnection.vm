{
  "version": "2017-02-28",
  "operation": "Query",
  "query": {
    "expression": "#adjacentId = :id and begins_with(#id, :entity)",
    "expressionNames": {
      "#id": "id",
      "#adjacentId": "adjacentId"
    },
    "expressionValues": {
      ":id": $util.dynamodb.toDynamoDBJson($context.source.id),
      ":entity": $util.dynamodb.toDynamoDBJson("album:")
    }
  }
}
