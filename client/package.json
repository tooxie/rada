{
  "name": "gawshi",
  "author": "Alvaro Mouri√±o <alvaro@mourino.net>",
  "repository": "https://gitlab.com/mourino/gawshi",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "codegen": "./scripts/codegen.sh",
    "dev": "preact watch",
    "format": "prettier --write '*.{json,js}' 'src/**/*.{js,json,ts,tsx}'",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "serve": "sirv build --port 8080 --cors --single",
    "test": "jest ./tests"
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@types/preact-i18n": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-plugin-graphql-tag": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "graphql-tag": "^2.12.4",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "preact": "^10.3.1",
    "preact-cli": "^3.0.0",
    "preact-i18n": "2.4.0-preactx",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "prettier": "2.3.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-document-nodes": "1.17.12",
    "@graphql-codegen/typescript-graphql-files-modules": "1.18.1",
    "@graphql-codegen/typescript-operations": "1.18.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-plugin-preact-i18n": "^1.0.1",
    "inject-html-webpack-plugin": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "sirv-cli": "^1.0.0-next.3",
    "vconsole": "^3.7.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "preact-i18n"
    ],
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "settings": {
      "preact-i18n": {
        "languageFiles": [
          {
            "name": "es",
            "path": "i18n/es.json"
          }
        ]
      }
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "error",
      "preact-i18n/no-missing-template-field": "error",
      "preact-i18n/no-text-as-attribute": "error",
      "preact-i18n/no-text-as-children": "warn",
      "preact-i18n/no-unknown-key": "error"
    }
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  },
  "prettier": {
    "printWidth": 90
  }
}
